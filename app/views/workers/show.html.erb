<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1><%= @worker.full_name %></h1>
        <h2>Status - <%= @worker.status %></h2>
      </div>

      <div class="col-xs-6 col-xs-offset-3">
        <%= link_to edit_worker_path(@worker), class: 'submit-button' do %>
          <i class="fas fa-pencil-alt"></i> Edit <%= @worker.first_name %>
        <% end %>
      </div>

    </div>
  </div>
</div>

