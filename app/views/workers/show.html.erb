<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1><%= @worker.first_name %> <%= @worker.last_name.upcase %></h1>
        <h2>Status - <%= @worker.status %></h2>
      </div>

      <ul class="list-inline">
        <li>
          <div class="edit-button">
            <%= link_to edit_worker_path(@worker), class: 'submit-button' do %>
              <i class="fas fa-pencil-alt"></i> Edit <%= @worker.first_name %>
            <% end %>
          </div>
        </li>
        <li>
          <div class="edit-button">
            <%= link_to root_path, class: 'home-button' do %>
              <i class="fas fa-home"></i> Back to home
            <% end %>
          </div>
        </li>
      </ul>

    </div>
  </div>
</div>

