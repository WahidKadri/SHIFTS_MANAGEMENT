<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1>Add a new Worker</h1>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <% if @worker.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @worker.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <%= simple_form_for @worker do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :status, collection: [ "MEDIC", "INTERN", "INTERIM" ] %>
          <h4><%= f.submit class: "submit-form-button form-control" %></h4>
        <% end %>
    </div>
  </div>
</div>

