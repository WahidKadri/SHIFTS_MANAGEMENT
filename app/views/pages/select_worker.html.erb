<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1 class="text-center">Select a Worker</h1>
      </div>

      <div class=" form form-inline text-center">
        <%= simple_form_for @worker, method: :get do |f| %>

            <h4>
              <!-- SEARCH BY -->
                <%= f.input :details, label: false, prompt:'LAST NAME', :collection => @details, input_html: { class: 'select2' } %>
              <!-- OR -->
                <%#= f.input :status, label: false, prompt:'STATUS', :collection => @status, input_html: { class: 'select2' } %>
                <%#= f.submit class: "submit-form-button form-control" do %>
                  <!-- <i class="fas fa-search"></i> Search -->
                <%# end %>
            </h4>
        <% end %>
      </div>
    </div>

    <div class="col-md-6 col-md-offset-3">
      <% if (params[:worker].present? && params[:worker][:details].present?) %>
        <div class="col-xs-12">
          <ul class="list-unstyled">
            <!-- <h3>MEDIC</h3> -->
            <% @workers.each do |worker| %>

              <li>
                <%= link_to worker_path(worker) do  %>
                  <i class="fas fa-user-md"></i> <%= worker.full_name %>
                <% end %>
              </li>

            <% end %>
          </ul>
        </div>
      <% else %>
        <%= "" %>
      <% end %>
    </div>
  </div>
</div>
