<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="title-box">
        <h1 class="text-center">Select a Shift</h1>
      </div>

      <div class=" form text-center">
        <%= simple_form_for @shift, method: :get do |f| %>

            <h4>
              SEARCH BY
                <%= f.input :start_date, as: :string, :require => false, prompt:'Select date..', input_html: {class: "flatpickr"} %>
              OR
                <%= f.collection_select(:worker_id, Worker.all.order(full_name: :asc), :id, :details, {:prompt => 'Worker', :require => false}, {:class =>'select2'}) %>
                <%= f.submit class: "submit-form-button form-control" do %>
                  <i class="fas fa-search"></i>
                <% end %>
            </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
