<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1>Edit / Assign a Shift</h1>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for @shift do |f| %>
        <% if @shift.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @shift.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :start_date, as: :string, prompt:'Select date..', input_html: {class: "flatpickr"} %>
        <div class="spacer">
          <%= f.collection_select(:worker_id, Worker.all.order(full_name: :asc), :id, :details, {:prompt => 'Please select a worker', :require => false}, {:class =>'select2'}) %>
        </div>
        <h4><%= f.submit class:"submit-form-button form-control" %></h4>
      <% end %>
    </div>
  </div>
</div>
